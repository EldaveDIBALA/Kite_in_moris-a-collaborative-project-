<!DOCTYPE html>
<html>
  <head>
    <title>KiteInMoris | Everything for kitesurfing in mauritius</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="icon" type="image/png" href="<%= asset_path('favicon.png') %>">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div data-controller="scroll-to-top">
      <button id="scrollToTop">
        <i class="fi fi-rs-arrow-up-right"></i>
      </button>
    </div>

    <%= tag.div(class: ('devise-layout' if devise_controller?), data: { controller: ('categories-filter' if current_page?(root_path)) }) do %>
      <% if spots_show_page? || shops_show_page? || schools_show_page? %>
        <%= render "shared/navbar_back" %>
      <% elsif blogs_show_page? %>
        <%= render "shared/navbar_blog_back" %>
      <% else %>
        <%= render "shared/navbar" %>
      <% end %>

      <%= render "shared/flashes" %>
        <%= yield %>
      </div>

      <%= render "shared/footer" unless devise_controller? %>
    <% end %>


  </body>
</html>
