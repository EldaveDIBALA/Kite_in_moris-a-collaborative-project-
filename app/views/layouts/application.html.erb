<!DOCTYPE html>
<html>
  <head>
    <title>KiteInMoris</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flaticon-uicons/your-version/flaticon-uicons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@flaticon/flaticon-uicons/css/all/all.min.css">

    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="<%= 'devise-layout' if devise_controller? %>">
      <% if spots_show_page? || shops_show_page? || schools_show_page? || blogs_show_page? %>
        <%= render "shared/navbar_back" %>
      <% else %>
        <%= render "shared/navbar" %>
      <% end %>

        <%= render "shared/flashes" %>
          <%= yield %>
        </div>
        <%= render "shared/footer" %>
    </div>

  </body>
</html>
