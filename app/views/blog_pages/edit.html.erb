<div class="container d-flex flex-column container-100vh">
  <h1 class="mb-3">Edit Blog Page</h1>
  <div class="col-md-10 mx-auto">
    <%= simple_form_for(@blog_page, html: { multipart: true }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :title, required: true, label: false, placeholder: "Title" %>

      <%= f.input :content, required: true, label: "Add your own HTML tags for titles", placeholder: "Content of the blog page." %>

      <% if @blog_page.blog_picture.attached? %>
        <div class="d-flex align-items-center mb-3">
          <img src="<%= url_for(@blog_page.blog_picture) %>" alt="Current blog page picture" class="img-fluid rounded me-3" style="width: 100px; height: 100px;">
          <p>Current picture</p>
        </div>
      <% end %>

      <div class="blog-input-form">
        <%= f.input :blog_picture, as: :file, label: false, optional: true %>
      </div>

      <div class="d-flex justify-content-center">
        <%= f.button :submit, "Update Blog Page", class: 'btn btn-primary', style: 'font-size: 18px; width: 300px;' %>
      </div>
    <% end %>
  </div>
</div>
