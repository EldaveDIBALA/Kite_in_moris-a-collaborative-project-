<div class="container d-flex flex-column container-100vh">
  <h1 class='mb-3'>Add a blog page</h1>
  <div class="col-md-10 mx-auto">
    <%= simple_form_for(@blog_page, html: { multipart: true }) do |f| %>
      <%= f.error_notification %>
        <%= f.input :title,
                    required: true,
                    label: false,
                    placeholder: "Title" %>
        <%= f.input :content,
                    required: true,
                    label:  "Add your own HTML tags for titles",
                    placeholder: "Content of the blog page." %>
        <div class="blog-input-form">
          <%= f.input :blog_picture, as: :file, label: false %>
        </div>
      <div class="d-flex justify-content-center">
        <%= f.button :submit, "Add your blog page", class: 'btn btn-primary', style: 'font-size: 18px; width: 300px;' %>
      </div>
    <% end %>
  </div>
</div>
