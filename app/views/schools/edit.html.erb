<div class="mb-2" style="background-color: #5BBBBC;">
  <div class="d-flex justify-content-center align-items-center vh-100">

    <div class="container">
      <h1 class="text-center mb-3">Edit School</h1>
      <%= simple_form_for @school do |f| %>
        <div class="row mb-2">
          <div class="col-md-6">
            <%= f.input :name, label: false, input_html: { class: 'form-control-custom', style: 'border-radius: 35px;' } %>
          </div>
          <div class="col-md-6">
            <%= f.input :address, label: false, input_html: { class: 'form-control-custom', style: 'border-radius: 35px;' } %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <%= f.input :phone, label: false, input_html: { class: 'form-control-custom', style: 'border-radius: 35px;' } %>
          </div>
          <div class="col-md-6">
            <%= f.input :website, label: false, input_html: { class: 'form-control-custom', style: 'border-radius: 35px;' } %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <%= f.input :email, label: false, input_html: { class: 'form-control-custom', style: 'border-radius: 35px;' } %>
          </div>
          <div class="col-md-6">
            <%= f.input :description, label: false, input_html: { class: 'form-control-custom', style: 'border-radius: 11px;' } %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <%= f.input :rental, label: false, input_html: { class: 'form-control-custom', style: 'border-radius: 11px;' } %>
          </div>
          <div class="col-md-6">
            <%= f.input :levels, label: false, input_html: { class: 'form-control-custom', style: 'border-radius: 11px;' } %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <%= f.input :fee, label: false, input_html: { class: 'form-control-custom', style: 'border-radius: 11px;' } %>
          </div>
          <div class="col-md-6">
            <%= f.input :facebook, label: false, input_html: { class: 'form-control-custom', style: 'border-radius: 35px;' } %>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <%= f.input :instagram, label: false, input_html: { class: 'form-control-custom', style: 'border-radius: 35px;' } %>
          </div>
          <div class="col-md-6">
            <%= f.input :category, label: false, input_html: { class: 'form-control-custom', style: 'border-radius: 11px;' } %>
          </div>
        </div>

        <div class="d-flex justify-content-center gap-2 mt-4">
          <%= link_to 'Back', schools_path, class: 'btn btn-secondary' %>
          <%= f.submit "Update School", class: "btn btn-primary" %>
          <%= link_to 'Delete School', school_path(@school), method: :delete, data: { confirm: 'Are you sure you want to delete this school?' }, class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
