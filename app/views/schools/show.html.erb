<h1><%= @school.name %></h1>

<div class="school-details">
  <p><strong>Adresse :</strong> <%= @school.address %></p>
  <p><strong>Téléphone :</strong> <%= @school.phone %></p>
  <p><strong>Site web :</strong> <%= link_to @school.website, @school.website, target: "_blank" %></p>
  <p><strong>Email :</strong> <%= mail_to @school.email %></p>
</div>

<%= link_to 'Retour à la liste des écoles', schools_path, class: 'btn btn-primary' %>
<%= link_to 'Modifier', edit_school_path(@school), class: 'btn btn-warning' %>
<%= link_to 'Supprimer', school_path(@school), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer cette école ?' }, class: 'btn btn-danger' %>


<h2>Avis</h2>
<div class="reviews">
  <% if @reviews.present? %>
    <% @reviews.each do |review| %>
      <div class="review">
        <strong><%= review.user.name %></strong>
        <p><%= review.content %></p>
      </div>
    <% end %>
  <% else %>
    <p>Pas d'avis pour cette école.</p>
  <% end %>
</div>

