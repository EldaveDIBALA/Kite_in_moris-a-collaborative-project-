
<div class='container'>
  <div class="spacer-14vh"></div>
  <h1 style='margin-bottom: 16px;'>Log in</h1>
  <%= render "devise/shared/signup" %>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="devise-input-form">
      <%= f.input :email,
                  required: false,
                  label: false,
                  autofocus: true,
                  placeholder: "example@email.com",
                  class: '',
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label: false,
                  placeholder: "Password",
                  class: '',
                  input_html: { autocomplete: "current-password" } %>
    </div>
    <div class='remember-devise'>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn bg-devise-light', style: 'font-size: 18px;' %>
    </div>
  <% end %>

  <div style='margin-top: 12vh; padding-bottom: 3vh;'>
    <%= link_to 'Créer un nouvel établissement', new_school_path, class: 'btn btn-primary' %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
